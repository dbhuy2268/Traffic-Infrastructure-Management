@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="padding-top:4em;" class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card login-logout-tab">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"].ToString() == "Log in" ? "active" : "")" href="/Identity/Account/Login">Đăng nhập</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"].ToString() == "Register" ? "active" : "")" href="/Identity/Account/Register">Đăng kí</a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @RenderSection("Scripts", required: false)
}