<!-- Modal -->
<div class="modal fade" id="ThemHoSoModal" tabindex="-1" role="dialog" aria-labelledby="themHoSoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel">THÊM HỒ SƠ</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="AddHSForm">
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-sm-5">
                            <label class="col-form-label">Mã hồ sơ: </label>
                            <input type="text" class="form-control input-HS-form" id="Input_MaHoSo" placeholder="Mã hồ sơ" name="MaHoSo" required />
                        </div>
                        <div class="form-group col-md-7">
                            <label class="col-form-label">Loại hồ sơ: </label>
                            <input type="text" class="form-control input-HS-form" id="Input_LoaiHoSo" placeholder="Loại hồ sơ" name="LoaiHoSo" required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <label class="col-form-label">Nơi cấp: </label>
                            <input type="text" class="form-control input-HS-form" id="Input_NoiCapHS" placeholder="Nơi cấp" name="NoiCap" required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <label class="col-form-label">Mô tả chi tiết: </label>
                            <textarea type="text" class="form-control input-HS-form" id="Input_MoTaChiTiet" placeholder="Mô tả chi tiết" name="MoTaChiTiet" required></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="btn_saveHoSo" type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
            <script>
                $('#AddHSForm').submit(function (e) {
                    e.preventDefault();
                })
            </script>
        </div>
    </div>
</div>
