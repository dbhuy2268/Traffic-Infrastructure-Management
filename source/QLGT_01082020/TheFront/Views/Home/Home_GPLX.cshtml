                @Html.DisplayFor(modelItem => item.NgayCap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiCap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuocTich)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HangMucGPLX)
            </td>
            <td>
                @Html.ActionLink("Details", "Details_GPLX", new { id = item.id })
            </td>
        </tr>
        }
    </tbody>
</table>
