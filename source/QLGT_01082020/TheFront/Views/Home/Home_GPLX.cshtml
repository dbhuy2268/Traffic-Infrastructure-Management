                @Html.DisplayNameFor(model => model.NgayCap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoiCap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoDienThoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuocTich)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HangMucGPLX)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
