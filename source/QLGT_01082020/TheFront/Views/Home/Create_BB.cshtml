            <input asp-for="NgayRaQDXP" class="form-control" required />
            <span asp-validation-for="NgayRaQDXP" class="text-danger"></span>
        </div>
    </div>
    <div style="width:100%;" class="form-group mx-auto">
        <input type="submit" style="width:100%; margin-top:2em;" onclick="submit_form();" value="Lập biên bản" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}