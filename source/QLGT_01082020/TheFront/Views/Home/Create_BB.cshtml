            <input asp-for="NgheNghiep" class="form-control" required />
            <span asp-validation-for="NgheNghiep" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
            <input asp-for="DiaChi" class="form-control" required />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
