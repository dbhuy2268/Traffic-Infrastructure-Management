@model IEnumerable<TheFront.Models.ThongTinDangKiemsModel>

@{
    ViewData["Title"] = "CheckHistory_DangKiem";
}

<h1 style="display:flex; justify-content:center; margin-top: 1.5em; margin-bottom: 1em;">Kiểm tra lịch sử đăng kiểm</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Trạng thái đăng kiểm
            </th>
            <th>
                Ngày đăng kiểm
            </th>
            <th>
                Số tem GCN
            </th>
            <th>
                Ngày hết hạn GCN
            </th>
            <th>
                Đơn vị kiểm định
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.trangThaiDangKiem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ngayDangKiem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GCN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ngayHetHanGCN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.donViKiemDinh)
                </td>
                <!--<td>-->
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@

                <!--</td>-->
            </tr>
        }
    </tbody>
</table>
<div>
    <a href="javascript:history.back()">Quay về</a>
</div>
