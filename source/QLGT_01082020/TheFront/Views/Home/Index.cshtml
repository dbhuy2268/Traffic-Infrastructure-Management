@{
    ViewData["Title"] = "Index";
}
<head>

    <!--====== Required meta tags ======-->
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


</head>
<body>


    <!--====== ABOUT PART START ======-->

    <style>
        .icon-wrapper {
            width: 180px;
            text-align: center;
        }

        #routing-section i {
            font-size: 7em;
            color: #22bcd4;
        }
    </style>

    <section id="about" class="about-area"  style="font-family: 'Josefin Sans', sans-serif;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8">
                    <div class="section-title text-center mt-30 pb-40">
                        <h4 style="font-family: 'Josefin Sans', sans-serif;" class="title wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="0.6s">Toàn bộ hạ tầng giao thông nằm trong tay bạn</h4>
                        <p class="text wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="1s">Được xây dựng bởi nhóm VHKHTN, <br />môn học Phát triển ứng dụng hệ thống thông tin hiện đại.</p>
                    </div> <!-- section title -->
                </div>
            </div> <!-- row -->

            <div class="row" id="routing-section">
                <div class="col-lg-6">
                    <div class="single-about d-sm-flex mt-30 wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="1.2s">
                        <div class="about-icon">
                            @*<img src="~/images/icon-1.png" alt="Icon">*@
                            <div class="icon-wrapper">
                                <i class="fas fa-truck-monster"></i>
                            </div>
                        </div>
                        <div class="about-content media-body">
                            <h4 style="line-height:50px;" class="about-title">Quản lý phương tiện</h4>
                            <ul>
                                <li><a asp-action="Create_YeuCau">Tạo yêu cầu đăng ký phương tiện</a></li>
                                <li><a asp-action="Create_LichHen">Tạo lịch hẹn đăng kiểm</a></li>
                                <li><a asp-action="Home_DangKiem">Xem lịch sử đăng kiểm</a></li>

                            </ul>
                        </div>
                    </div> <!-- single about -->
                </div>
                <div class="col-lg-6">
                    <div class="single-about d-sm-flex mt-30 wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="1.4s">
                        <div class="about-icon">
                            @*<img src="~/images/icon-2.png" alt="Icon">*@
                            <div class="icon-wrapper">
                                <i class="fas fa-clipboard-list"></i>
                            </div>
                        </div>
                        <div class="about-content media-body">
                            <h4 style="line-height:50px;" class="about-title">Thực hiện xử phạt</h4>
                            <ul>
                                <li><a asp-action="Create_BB">Lập biên bản xử phạt</a></li>
                            </ul>
                        </div>
                    </div> <!-- single about -->
                </div>
                <div class="col-lg-6">
                    <div class="single-about d-sm-flex mt-30 wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="1.8s">
                        <div class="about-icon">
                            @*<img src="~/images/icon-4.png" alt="Icon">*@
                            <div class="icon-wrapper">
                                <i class="far fa-id-badge"></i>
                            </div>
                        </div>
                        <div class="about-content media-body">
                            <h4 style="line-height:50px;" class="about-title">Xử lý cấp GPLX</h4>
                            <ul>
                                <li><a asp-action="Home_GPLX">Cấp giấy phép lái xe</a></li>
                            </ul>
                        </div>
                    </div> <!-- single about -->
                </div>
                <div class="col-lg-6">
                    <div class="single-about d-sm-flex mt-30 wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="1.6s">
                        <div class="about-icon">
                            @*<img src="~/images/icon-3.png" alt="Icon">*@
                            <div class="icon-wrapper">
                                <i class="fas fa-sliders-h"></i>
                            </div>
                        </div>
                        <div class="about-content media-body">
                            <h4 style="line-height:50px;" class="about-title">Tiện ích khác</h4>
                            <ul>
                                <li><a asp-action="Home_TraCuuLuat">Tra cứu luật giao thông đường bộ</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div> <!-- row -->
        </div> <!-- container -->
    </section>

    <!--====== ABOUT PART ENDS ======-->
    <!--====== portfolio PART START ======-->

    <section id="portfolio" class="portfolio-area" style="font-family: 'Josefin Sans', sans-serif;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="section-title text-center pb-20">
                        <h3 class="title" style="font-family: 'Josefin Sans', sans-serif;">Bạn đang sử dụng phiên bản miễn phí của ứng dụng quản lý giao thông</h3>
                        <p class="text pb-30">Hãy mua bản đầy đủ để có được trải nghiệm tốt nhất</p>
                        <p class="carousel-btn rounded-buttons">
                            <a class="main-btn rounded-three" rel="nofollow" href="http://rebrand.ly/smart-ud">Mua ngay!</a>
                        </p>
                    </div> <!-- row -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </section>

    <!--====== portfolio PART ENDS ======-->

    <!--====== BACK TOP TOP PART START ======-->

    <a href="#" class="back-to-top"><i class="lni-chevron-up"></i></a>

    <!--====== BACK TOP TOP PART ENDS ======-->
    <!--====== PART START ======-->
    <!--====== PART ENDS ======-->
