    <script src="~/js/landing/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/js/landing/vendor/jquery-1.12.4.min.js"></script>

    <!--====== Bootstrap js ======-->
    <script src="~/js/landing/bootstrap.min.js"></script>
    <script src="~/js/landing/popper.min.js"></script>

    <!--====== Slick js ======-->
    <script src="~/js/landing/slick.min.js"></script>

    <!--====== Isotope js ======-->
    <script src="~/js/landing/isotope.pkgd.min.js"></script>

    <!--====== Images Loaded js ======-->
    <script src="~/js/landing/imagesloaded.pkgd.min.js"></script>

    <!--====== Magnific Popup js ======-->
    <script src="~/js/landing/jquery.magnific-popup.min.js"></script>

    <!--====== Scrolling js ======-->
    <script src="~/js/landing/scrolling-nav.js"></script>
    <script src="~/js/landing/jquery.easing.min.js"></script>

    <!--====== wow js ======-->
    <script src="~/js/landing/wow.min.js"></script>

    <!--====== Main js ======-->
    <script src="~/js/landing/main.js"></script>

</body>
